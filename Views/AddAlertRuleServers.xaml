<Window x:Class="WpfRequestResponseLogger.AddAlertRuleServers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Alert Rule Server" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Select Alert Rule:" />
            <ComboBox x:Name="AlertRuleComboBox" Width="200" Margin="0,5,0,10"/>

            <Label Content="Select Server:" />
            <ComboBox x:Name="ServerComboBox" Width="200" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="Save" Width="80" Click="SaveButton_Click"/>
                <Button x:Name="ExitButton" Content="Exit" Width="80" Margin="10,0,0,0" Click="ExitButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
