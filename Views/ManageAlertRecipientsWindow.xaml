<Window x:Class="WpfRequestResponseLogger.Views.ManageAlertRecipientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Alert Recipients" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,10">
                <Button Name="btnAdd" Content="Add" Width="75" Margin="5" Click="btnAdd_Click"/>



                <Button Name="btnEdit" Content="Edit" Width="75" Margin="5" Click="btnEdit_Click"/>


                <Button Name="btnDelete" Content="Delete" Width="75" Margin="5" Click="btnDelete_Click"/>


                <Button Name="btnExit" Content="Exit" Width="75" Margin="5" Click="btnExit_Click"/>
            </StackPanel>

            <DataGrid Name="alertRecipientsGrid"
                      AutoGenerateColumns="True"
                      HorizontalAlignment="Stretch"
                      Margin="10"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      CanUserAddRows="False"
                      HeadersVisibility="Column" Height="321"/>
            <!-- Hides the row headers -->

            <!-- Hides the row headers -->



        </StackPanel>
    </Grid>
</Window>
