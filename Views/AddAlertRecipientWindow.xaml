<Window x:Class="WpfRequestResponseLogger.Views.AddAlertRecipientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Alert Recipient" Height="350" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <Label Content="Recipient"/>
            <TextBox Name="txtRecipient" Width="300" Margin="5"/>

            <Label Content="Email"/>
            <TextBox Name="txtEmail" Width="300" Margin="5"/>

            <Label Content="Phone"/>
            <TextBox Name="txtPhone" Width="300" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="btnSave" Content="Save" Width="75" Margin="5" Click="btnSave_Click"/>
                <Button Name="btnExit" Content="Exit" Width="75" Margin="5" Click="btnExit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
